<Window x:Class="CsvIntegratorApp.AddVehicleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adicionar Novo VeÃ­culo" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow">
    <StackPanel Margin="16">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Placa:" Grid.Row="0" Grid.Column="0" Margin="4"/>
            <TextBox x:Name="PlacaTextBox" Grid.Row="0" Grid.Column="1" Margin="4"/>

            <Label Content="Renavam:" Grid.Row="1" Grid.Column="0" Margin="4"/>
            <TextBox x:Name="RenavamTextBox" Grid.Row="1" Grid.Column="1" Margin="4"/>

            <Label Content="Modelo:" Grid.Row="2" Grid.Column="0" Margin="4"/>
            <TextBox x:Name="ModeloTextBox" Grid.Row="2" Grid.Column="1" Margin="4"/>

            <Label Content="Tipo:" Grid.Row="3" Grid.Column="0" Margin="4"/>
            <TextBox x:Name="TipoTextBox" Grid.Row="3" Grid.Column="1" Margin="4"/>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Salvar" x:Name="AddButton" IsDefault="True" Click="Save_Click" MinWidth="80" Margin="0,0,8,0"/>
            <Button Content="Cancelar" IsCancel="True" MinWidth="80"/>
        </StackPanel>
    </StackPanel>
</Window>
