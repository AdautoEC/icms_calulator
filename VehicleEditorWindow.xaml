<Window x:Class="CsvIntegratorApp.VehicleEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gerenciador de Veículos — ICMS Integrator"
        Height="500" Width="800"
        MinWidth="480" MinHeight="360"
        WindowStartupLocation="CenterOwner"
        Background="#F0F0F0">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Título Principal -->
        <TextBlock Grid.Row="0" Text="Gerenciar Frota de Veículos" FontSize="20" FontWeight="Bold" Margin="8,4,8,12" Foreground="#1E1E1E"/>

        <!-- Corpo Principal (Grid de Veículos) -->
        <Border Grid.Row="1" Background="White" CornerRadius="4" Margin="8,0,8,0" BorderBrush="#DDD" BorderThickness="1">
            <DataGrid x:Name="VehicleGrid"
                      Margin="16"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      ItemsSource="{Binding}"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Placa" Binding="{Binding Placa}" Width="*"/>
                    <DataGridTextColumn Header="Renavam" Binding="{Binding Renavam}" Width="*"/>
                    <DataGridTextColumn Header="Modelo" Binding="{Binding Modelo}" Width="2*"/>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="2*"/>
                    <DataGridTemplateColumn Header="Ações" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" Click="EditVehicle_Click" Margin="2"/>
                                    <Button Content="Excluir" Click="DeleteVehicle_Click" Margin="2"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Rodapé: Ações -->
        <Border Grid.Row="2" Background="White" CornerRadius="4" Margin="8,12,8,0" BorderBrush="#DDD" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="16">
                <Button x:Name="AddVehicleButton" Content="Adicionar Veículo" Click="AddVehicle_Click" Margin="0,0,8,0" MinWidth="120" Height="32" Style="{StaticResource AccentButtonStyle}"/>
                <Button x:Name="SaveButton" Content="Salvar" Click="Save_Click" Margin="0,0,8,0" MinWidth="100" Height="32"/>
                <Button x:Name="ImportJsonButton" Content="Importar JSON" Click="ImportJson_Click" Margin="0,0,8,0" MinWidth="120" Height="32"/>
                <Button x:Name="ExportJsonButton" Content="Exportar JSON" Click="ExportJson_Click" Margin="0,0,8,0" MinWidth="120" Height="32"/>
                <Button Content="Fechar" IsCancel="True" MinWidth="100" Height="32"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>