<Window x:Class="CsvIntegratorApp.VehicleEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor de VeÃ­culos" Height="480" Width="640" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="VehicleGrid" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="True"
                  Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Placa" Binding="{Binding Placa}" Width="*"/>
                <DataGridTextColumn Header="Renavam" Binding="{Binding Renavam}" Width="*"/>
                <DataGridTextColumn Header="Modelo" Binding="{Binding Modelo}" Width="2*"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Remover Selecionado" Margin="0,0,8,0" Click="RemoveRow_Click"/>
            <Button Content="Salvar e Fechar" Click="SaveAndClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
