<Window x:Class="CsvIntegratorApp.ImportWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assistente de Importação — CSV Integrador" Height="520" Width="880" WindowStartupLocation="CenterScreen">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Selecione os arquivos" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
    
    <!-- NFe -->
    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,0">
      <TextBlock Text="NFe XML:" Width="90" VerticalAlignment="Center"/>
      <TextBox x:Name="NfePath" MinWidth="560" Margin="8,0,8,0"/>
      <Button Content="Procurar..." Click="PickNfe_Click" Width="110"/>
    </StackPanel>

    <!-- MDFe -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6,0,0">
      <TextBlock Text="MDFe XML:" Width="90" VerticalAlignment="Center"/>
      <TextBox x:Name="MdfePath" MinWidth="560" Margin="8,0,8,0"/>
      <Button Content="Procurar..." Click="PickMdfe_Click" Width="110"/>
    </StackPanel>

    <!-- TXT -->
    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,6,0,0">
      <TextBlock Text="Arquivo TXT:" Width="90" VerticalAlignment="Center"/>
      <TextBox x:Name="TxtPath" MinWidth="560" Margin="8,0,8,0"/>
      <Button Content="Procurar..." Click="PickTxt_Click" Width="110"/>
    </StackPanel>

    <!-- Actions -->
    <StackPanel Grid.Row="4" Orientation="Vertical" Margin="0,10,0,10">
      <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
        <Button Content="Processar Arquivos e Calcular Rota" Width="240" Click="PreFill_Click" Margin="0,0,8,0"/>
        <Button Content="Abrir Editor (Modelos)" Width="180" Click="OpenEditor_Click"/>
        <Button Content="Gerenciar Veículos" Width="180" Click="OpenVehicleEditor_Click" Margin="8,0,0,0"/>
        <TextBlock x:Name="StatusText" Margin="16,0,0,0" VerticalAlignment="Center"/>
      </StackPanel>

      <DataGrid x:Name="PreviewGrid" AutoGenerateColumns="True" Height="320" IsReadOnly="True" />
    </StackPanel>

    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button x:Name="ViewLogButton" Content="Ver Log de Cálculo" Width="140" Click="ViewLog_Click" IsEnabled="False" Margin="0,0,8,0"/>
      <Button x:Name="ViewRouteButton" Content="Visualizar Rota" Width="140" Click="ViewRoute_Click" IsEnabled="False" Margin="0,0,8,0"/>
      <Button Content="Exportar CSV" Width="140" Click="ExportCsv_Click" />
    </StackPanel>
  </Grid>
</Window>
